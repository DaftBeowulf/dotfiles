#!/usr/bin/env zsh

# ORDER
SPACESHIP_PROMPT_ORDER=(
  time
  user
  host
  pyenv
  venv
  conda
  node
  ruby
  rust
  line_sep
  git
  dir
  line_sep
  char
)

# TIME
SPACESHIP_TIME_SHOW=true
SPACESHIP_TIME_FORMAT='%T'

# USER
SPACESHIP_USER_SHOW='always'
SPACESHIP_USER_PREFIX='as '

# HOST
SPACESHIP_HOST_SHOW='always'
SPACESHIP_HOST_PREFIX='on '

# DOCKER
SPACESHIP_DOCKER_SHOW=true
SPACESHIP_DOCKER_PREFIX='on '
SPACESHIP_DOCKER_SUFFIX=$SPACESHIP_PROMPT_DEFAULT_SUFFIX
SPACESHIP_DOCKER_SYMBOL='üê≥ '
SPACESHIP_DOCKER_COLOR='cyan'

# VENV
SPACESHIP_VENV_SHOW=true
SPACESHIP_VENV_PREFIX='venv:(‚úâÔ∏è '
SPACESHIP_VENV_SUFFIX=') '
SPACESHIP_VENV_COLOR='yellow'
SPACESHIP_VENV_GENERIC_NAMES=(venv .venv)

# PYENV
SPACESHIP_PYENV_SHOW=true
SPACESHIP_PYENV_PREFIX='pyenv:('
SPACESHIP_PYENV_SUFFIX=') '
SPACESHIP_PYENV_SYMBOL='üêç '
SPACESHIP_PYENV_COLOR='yellow'

# CONDA
SPACESHIP_CONDA_SHOW=true
SPACESHIP_CONDA_PREFIX='conda:('
SPACESHIP_CONDA_SUFFIX=') '
SPACESHIP_CONDA_SYMBOL='üÖí¬∑'
SPACESHIP_CONDA_COLOR='blue'
SPACESHIP_CONDA_VERBOSE=true

# NODE
SPACESHIP_NODE_SHOW=true
SPACESHIP_NODE_PREFIX='node:('
SPACESHIP_NODE_SUFFIX=') '
SPACESHIP_NODE_SYMBOL='‚ùáÔ∏è '
SPACESHIP_NODE_COLOR='green'

# RUBY
SPACESHIP_RUBY_SHOW=true
SPACESHIP_RUBY_PREFIX='ruby:('
SPACESHIP_RUBY_SUFFIX=') '
SPACESHIP_RUBY_SYMBOL='üíé '

# RUST
SPACESHIP_RUST_SHOW=true
SPACESHIP_RUST_PREFIX='rust:('
SPACESHIP_RUST_SUFFIX=') '
SPACESHIP_RUST_SYMBOL='ùó•¬∑'
SPACESHIP_RUST_COLOR='red'
SPACESHIP_RUST_VERBOSE_VERSION=false

# GIT
SPACESHIP_GIT_SHOW=true
SPACESHIP_GIT_PREFIX='on branch '

# DIR
SPACESHIP_DIR_SHOW=true
SPAECHIP_DIR_PREFIX='in '
SPACESHIP_DIR_TRUNC=2
SPACESHIP_DIR_TRUNC_REPO=true

# Set spaceship ZSH as a prompt (replaces $ZSH_THEME)
autoload -U promptinit
promptinit
prompt spaceship
